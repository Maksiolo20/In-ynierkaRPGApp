@model List<ChronologyNoteModel>
    <a class="card-title text-white" href="#pageDown" style="font-size: 1.5em">Notatki Chronologii</a>
    <div id="AllMessages">

    <div class="nav-item">
        <a class="nav-link text-dark" asp-controller="Chronology" asp-action="Create">
            Utwórz nową notatkę
        </a>
    </div>

        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="card" style="width: 90%;">
            <div class="card-body">
                <h5 class="card-title">@Model[i].Title</h5>
                <p class="card-text">@Model[i].Body</p>
                <a href="#" class="card-link">Edytuj</a>
                <a href="#" class="card-link">Usuń</a>
            </div>
        </div>
        }
    </div>