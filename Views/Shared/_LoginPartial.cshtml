@using Microsoft.AspNetCore.Identity
@using RPGApp.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" style="border-radius: 15px;border:0px; padding: 10px;" @*asp-area="Identity" asp-page="/Account/Manage/Index"*@ title="Manage">Zalogowany jako @User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity"  asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" style="border-radius: 15px;border:1px solid #000000; padding: 10px;" class="nav-link btn btn-link text-dark">Wyloguj się</button>
        </form>
    </li>
}
else
{
    <li class="nav-item mx-3">
            <a class="nav-link text-dark" style="border-radius: 15px;border:1px solid #000000; padding: 10px;" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" style="border-radius: 15px;border:1px solid #000000; padding: 10px;" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
    </li>
}
</ul>
