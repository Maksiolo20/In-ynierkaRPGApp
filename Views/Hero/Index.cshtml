@model ExpandedCardModel
<a class="card-title text-white" href="#pageDown" style="font-size: 1.5em">Bestiariusz</a>
<div id="AllMessages">

    <div class="nav-item">
        <a class="btn btn-primary" asp-controller="Hero" asp-action="Create">
            Utwórz Nowego Bohatera
        </a>
    </div>

    @for (int i = 0; i < Model.ListOfCards.Count; i++)
    {
        <div class="card my-4" style="width: 45%;">
            <div class="card-body">
                <h5 class="card-title">@Model.ListOfCards[i].Title</h5>
                @if(Model.ListOfCards[i].CardPath!=null)
                {
                <a class="card-subtitle mb-2 text-muted" href="../NPCCardFiles/@Model.ListOfCards[i].CardPath" target="_blank">Otwórz Kartę Bohatera</a>
                }
                <p class="card-text">@Model.ListOfCards[i].Body</p>
                <a href="#" class="card-link">Edytuj</a>
                <a href="#" class="card-link">Usuń</a>
            </div>
        </div>
    }
</div>