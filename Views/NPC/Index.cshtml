@model ExpandedCardModel
<h2 class="card-title" style="font-size: 1.5em">Postacie NPC</h2>
<div id="AllMessages">

    <div class="nav-item">
        
        <a class="btn btn-primary" asp-controller="NPC" asp-action="Create">
            Utwórz nową postać NPC
        </a>
    </div>

    @for (int i = 0; i < Model.ListOfCards.Count; i++)
    {

        <div class="card my-4" style="width: 90%;">
            <div class="card-body">
                <h5 class="card-title">@Model.ListOfCards[i].Title</h5>
                @if(Model.ListOfCards[i].CardPath!=null)
                {
                <a class="card-subtitle mb-2 text-muted" href="../NPCCardFiles/@Model.ListOfCards[i].CardPath" target="_blank">Otwórz Kartę Postaci</a>
                }
                <p class="card-text">@Model.ListOfCards[i].Body</p>
                @if (Model.ListOfCards[i].CardPath != null)
                {
                    <img src="NPCCardFiles/@Model.ListOfCards[i].CardPath">
                }
@*                <a href="#" class="card-link">Edytuj</a>
                <a href="#" class="card-link">Usuń</a>*@
            </div>
        </div>
    }
</div>