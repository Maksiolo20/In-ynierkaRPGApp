@model List<ManualTabViewModel>
    <h2 class="card-title" style="font-size: 1.5em">Zakładki do Podręczników</h2>
    <div id="AllMessages">

    <div class="nav-item">
        <a class="btn btn-primary" asp-controller="ManualTab" asp-action="Create">
            Utwórz Nową Zakładkę
        </a>
    </div>

        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="card my-4" style="width: 90%;">
            <div class="card-body">
                <h5 class="card-title">@Model[i].Title</h5>
                @if (Model[i].ManualURL != null)
                {
                    <a href="@Model[i].ManualURL" target="_blank" class="card-title">Otwórz link (@Model[i].ManualURL)</a>
                }
                <p class="card-text">@Model[i].Body</p>
@*                <a href="#" class="card-link">Edytuj</a>
                <a href="#" class="card-link">Usuń</a>*@
            </div>
        </div>
        }
    </div>