@model ExpandedCardModel
<script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<form asp-controller="Beastiary" asp-action="CreateBeast" method="POST" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

    <div class ="form-outline mb-4 h4">
        Dodajesz nową bestię. Nadaj nazwę, dodaj opis oraz plik w rozszerzeniu PDF z kartą bestii.
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Card.Title">Nazwa Bestii</label>
        <div>
            <input asp-for="Card.Title" class="form-control" />
            <span asp-validation-for="Card.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Card.Body">Opis Bestii</label>
        <div>
            <textarea asp-for="Card.Body" class="form-control"></textarea>
            <span asp-validation-for="Card.Body" class="text-danger"></span>
        </div>
    </div> 
    <div>Dodaj PDF Bestii:</div>
    <input type="file" name="file" />
    <input type="submit" class="btn btn-success" value="Utwórz!" />
</form>
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea#body'
        });
    </script>
}